! native transparency
URxvt*.transparent: true

! 0 to 99 darkens, 101 to 200 lightens
URxvt*.shading: 40

! font settings
URxvt.font:xft:Monospace:pixelsize=12
URxvt.boldfont:xft:Monospace-Bold:pixelsize=12
URxvt.letterSpace: 0

! prevent ctrl+shift from screwing things
URxvt*iso14755: false

! ambience terminator colors
! black
*color0:  #2E3436
*color8:  #555753
! red
*color1:  #CC0000
*color9:  #EF2929
! green
*color2:  #4E9A06
*color10: #8AE234
! yellow
*color3:  #C4A000
*color11: #FCE94F
! blue
*color4:  #3465A4
*color12: #729FCF
! violet
*color5:  #75507B
*color13: #AD7FA8
! cyan
*color6:  #06989A
*color14: #34E2E2
! grey
*color7:  #D3D7CF
*color15: #EEEEEC

! cursor settings
URxvt*cursorBlink: true
URxvt*cursorUnderline: true

! make stuff readable
URxvt*foreground: White
URxvt*background: Black

! ignore the scrollbar
URxvt*scrollBar: false

! make urls clickable
URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: /usr/bin/chromium
URxvt.matcher.button: 1

! jumping words
URxvt.keysym.Control-Up:   \033[1;5A
URxvt.keysym.Control-Down:    \033[1;5B
URxvt.keysym.Control-Left:    \033[1;5D
URxvt.keysym.Control-Right:    \033[1;5C
