[user]
    email = gzmbnn@gmail.com
    name  = Gustavo Zambonin

[push]
    default = simple

[color]
    ui = auto
    status = always

[core]
    editor = vim
    excludesfile = ~/.files/conf/.gitignore_global
    pager = less -+FSX

[alias]
    br = branch -v
    ca = commit --amend
    ch = checkout
    cm = commit --verbose
    cp = cherry-pick
    ct = !git --no-pager shortlog --summary --numbered --email
    df = "!for i in $(git diff --name-only) ; do git diff "$i"; done"
    ds = diff --staged
    lc = !git --no-pager log -1 --format=fuller
    lg = log --graph --pretty=format:'%C(12)%h â€¢ %ar by %an <%ae> %n%B'
    nb = checkout -b
    ss = status -bs
