filetype indent plugin on
highlight ColorColumn ctermbg=0 guibg=lightgrey
set autoindent
set backspace=indent,eol,start
set colorcolumn=80
set confirm
set expandtab
set ignorecase
set laststatus=2
set mouse=a
set nostartofline
set number
set shiftwidth=4
set showcmd
set smartcase
set softtabstop=4
syntax on
 
