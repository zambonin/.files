post_install() {
  systemctl enable --now backup.timer
  systemctl enable suspend@$SUDO_USER
  curl --no-buffer --max-time 10 "https://ipinfo.io/geo"                      \
    | awk -F\" '/loc/ {split($4, x, ","); print "lat=" x[1] "\nlon=" x[2]}'   \
    >> "$HOME/.config/redshift.conf"
}

pre_remove() {
  systemctl disable --now backup.timer
  systemctl disable suspend@$SUDO_USER
}
