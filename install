#!/bin/bash

# terminal emulator preferences
mkdir $HOME/.config/terminator
ln -s $HOME/dotfiles/terminator/config $HOME/.config/terminator/config

# touchpad settings
ln -s $HOME/dotfiles/50-synaptics.conf /etc/X11/xorg.conf.d/

# various config files
ln -s $HOME/dotfiles/.{asound,bash,xinit}rc $HOME
ln -P $HOME/dotfiles/.{conky,nano}rc $HOME

# i3-gaps settings
mkdir $HOME/.i3
ln -s $HOME/dotfiles/.i3/* $HOME/.i3/

# systemctl service that starts i3lock after regaining from suspend state
cp -r $HOME/dotfiles/suspend.service /etc/systemd/system/

# pretty images
ln -P $HOME/dotfiles/.{wallpaper,icon}.png $HOME
