#!/bin/bash

# various config files
ln -fs $HOME/.files/.{aliases,gitconfig,Xresources,{asound,bash,input,vim,xinit}rc} $HOME
ln -fP $HOME/.files/redshift.conf $HOME/.config

# keyboard settings
localectl --no-convert set-keymap us-acentos
localectl --no-convert set-x11-keymap us pc105 intl

sudo -s <<EOF
sed -i 's/#MAKEFLAGS=\"-j2\"/MAKEFLAGS=\"-j$(nproc)\"/;
s/x86-64 -mtune=generic/native/;
s/.tar.xz/.tar/;
s/#B/B/' /etc/makepkg.conf
EOF
