#!/bin/bash

# terminal emulator preferences
mkdir $HOME/.config/terminator
ln -s $HOME/dotfiles/terminator/config $HOME/.config/terminator/config

# touchpad settings
ln -s $HOME/dotfiles/50-synaptics.conf /etc/X11/xorg.conf.d/

# various config files
ln -s $HOME/dotfiles/.asoundrc $HOME
ln -s $HOME/dotfiles/.bashrc $HOME
ln -s $HOME/dotfiles/.conkyrc $HOME
ln -s $HOME/dotfiles/.nanorc $HOME
ln -s $HOME/dotfiles/.xinitrc $HOME

# i3-gaps settings
mkdir $HOME/.i3
ln -s $HOME/dotfiles/.i3/* $HOME/.i3/
ln -s $HOME/dotfiles/.i3status.conf $HOME

# pretty images
ln -s $HOME/dotfiles/*.png $HOME